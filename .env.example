# Slack Bot Configuration
# Required for both Socket Mode and Lambda HTTP Mode
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Only required for Socket Mode (src/app-socket.js)
# NOT needed for Lambda HTTP Mode deployment
SLACK_APP_TOKEN=xapp-your-app-token-here

# Application Configuration
PORT=3000
NODE_ENV=development

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Deployment Mode Selection
# Socket Mode: Use src/app-socket.js (persistent connection)
# HTTP Mode: Use src/app.js (for Lambda deployment)
# For Lambda: Only SLACK_BOT_TOKEN and SLACK_SIGNING_SECRET are required

# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
# OR use AWS Profile instead of access keys
# AWS_PROFILE=default

# Bedrock Agent Configuration
BEDROCK_AGENT_ID=your-bedrock-agent-id
BEDROCK_AGENT_ALIAS_ID=TSTALIASID
BEDROCK_ENABLE_TRACE=false

# Knowledge Base IDs (comma-separated for multiple)
BEDROCK_KNOWLEDGE_BASE_IDS=kb-12345678,kb-87654321

# AI SDK Model Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0