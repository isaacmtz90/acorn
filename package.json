{
  "name": "acorn-slack-bot",
  "version": "1.0.0",
  "description": "A Slack chatbot application",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "deploy": "npm run build && serverless deploy --stage prod",
    "deploy:remove": "serverless remove",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "build:local": "serverless deploy --stage local",
    "offline": "rimraf build && rimraf .build && serverless offline start --reloadHandler",
    "package": "npm run build && serverless package",
    "logs": "serverless logs -f slackEvents --tail",
    "logs:dev": "serverless logs -f slackEvents --tail --stage dev"
  },
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^1.0.2",
    "@aws-sdk/client-bedrock-agent-runtime": "^3.658.1",
    "@aws-sdk/client-ssm": "^3.888.0",
    "@aws-sdk/credential-providers": "^3.658.1",
    "@slack/bolt": "^3.17.1",
    "ai": "^3.4.32",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.3.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.3.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "slack",
    "bot",
    "chatbot",
    "javascript"
  ]
}
